#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

show_help() {
    echo "Usage: nas <command>"
    echo ""
    echo "Available commands:"
    echo "  sync [documents|projects|photos]       Sync directories to Box (default: all)"
    echo "  mount                                  Mount the UnRaid Box NAS"
    echo "  help                                   Show this help message"
}

case "$1" in
    "sync")
        shift
        NAS_WRAPPER_CMD="nas sync" "$SCRIPT_DIR/syncnas.sh" "$@"
        ;;
    "mount")
        "$SCRIPT_DIR/mount_nas.sh"
        ;;
    "help"|"--help"|"-h"|"")
        show_help
        ;;
    *)
        echo "Unknown command: $1"
        echo ""
        show_help
        exit 1
        ;;
esac
